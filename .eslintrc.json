{
	"env": {
		"browser": true,
		"commonjs": true,
		"node": true,
		"es6": true
	},
	"globals": {
		"atom": false
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab", {
			"SwitchCase": 1
		}],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}

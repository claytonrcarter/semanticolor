ColorlexiaView = require './colorlexia-view'
{CompositeDisposable} = require 'atom'

module.exports = Colorlexia =
  colorlexiaView: null
  modalPanel: null
  subscriptions: null

  activate: (state) ->
    @colorlexiaView = new ColorlexiaView(state.colorlexiaViewState)
    @modalPanel = atom.workspace.addModalPanel(item: @colorlexiaView.getElement(), visible: false)

    # Events subscribed to in atom's system can be easily cleaned up with a CompositeDisposable
    @subscriptions = new CompositeDisposable

    # Register command that toggles this view
    @subscriptions.add atom.commands.add 'atom-workspace', 'colorlexia:toggle': => @toggle()

  deactivate: ->
    @modalPanel.destroy()
    @subscriptions.dispose()
    @colorlexiaView.destroy()

  serialize: ->
    colorlexiaViewState: @colorlexiaView.serialize()

  toggle: ->
    console.log 'Colorlexia was toggled!'

    if @modalPanel.isVisible()
      @modalPanel.hide()
    else
      @modalPanel.show()
